  "bugs": {
    "url": "https://github.com/frasdav/home-server/issues"
  },
  "homepage": "https://github.com/frasdav/home-server#readme",
  "dependencies": {
    "@cda0/terrajs": "^0.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^6.0.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
