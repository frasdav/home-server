{
  "name": "home-server",
  "version": "1.0.0",
  "description": "Deploys my home server.",
  "scripts": {
    "deploy": "npm run deploy:virtual-machine-template && npm run deploy:virtual-machines",
    "deploy:virtual-machine-template": "node ./src/virtual-machine-template/deploy.js",
    "deploy:virtual-machines": "node ./src/virtual-machines/deploy.js",
    "ci-deploy": "docker-compose run --rm deploy npm run deploy",
    "test": "npm run test:lint",
    "test:lint": "npx eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frasdav/home-server.git"
  },
  "author": "Fraser Davidson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/frasdav/home-server/issues"
  },
  "homepage": "https://github.com/frasdav/home-server#readme",
  "dependencies": {
    "@cda0/terrajs": "^0.2.0",
    "got": "^11.1.4",
    "node-powershell": "^4.0.0",
    "shelljs": "^0.8.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^6.0.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
